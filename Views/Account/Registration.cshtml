@model ProductCatalog.ViewModels.RegisterAccountViewModel

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label mb-2"></label>
                <input asp-for="UserName" class="form-control shadow-none" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label mb-2"></label>
                <input asp-for="Email" class="form-control shadow-none" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Password" class="control-label mb-2"></label>
                <input asp-for="Password" class="form-control shadow-none" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ConfirmPassword" class="control-label mb-2"></label>
                <input asp-for="ConfirmPassword" class="form-control shadow-none" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Register" class="btn btn-primary shadow-none me-5" />
                Already have an account ? <a asp-action="Login" class="btn btn-primary shadow-none" asp-controller="Account">Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
