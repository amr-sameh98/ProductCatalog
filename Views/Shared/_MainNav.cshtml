@*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">*@
<nav class="navbar navbar-expand-lg bg-primary mb-3" data-bs-theme="dark">
    <div class="container">
        @if (User.IsInRole("Admin"))
        {
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Product" asp-action="GetAll">Product Catalog</a>
        }
        else
        {
            <a class="navbar-brand fw-bold">Product Catalog</a>
        }
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav ms-auto">
                @if(User.Identity.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="Registration">Register</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold"> Welcome @User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }


            </ul>
        </div>
    </div>
</nav>

